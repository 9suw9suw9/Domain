<%- include('partials/head') %>
<main class="container mt-4">
    <h1>Bans</h1>
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header"><span class="material-symbols-rounded">gavel</span> Ban user</div>
            <div class="card-body">
                <form action="/bans" method="POST">
                    <div class="mb-3">
                        <label for="ban-userid" class="form-label">userID</label>
                        <input type="text" class="form-control" id="ban-userid" name="userId" required>
                    </div>
                    <div class="mb-3">
                        <label for="ban-reason" class="form-label">Reason</label>
                        <input type="text" class="form-control" id="ban-reason" name="reason" required>
                    </div>
                </form>
                <button onclick="ban()" class="btn btn-primary">Ban user</button>
                <script src="/js/ban.js"></script>
            </div>
        </div>
    </div>
    <div class="row" id="ban-cards-container">
        <%#
        <div class="col-12 col-md-12 col-lg">
            <div class="card">
                <div class="card-header">
                    <img src="https://placehold.co/400x400.png" alt="pfp" width="32px">
                    <p style="margin-bottom: 0">Username</p>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p>Reason: was bad</p>
                    </div>
                    <button type="button" class="btn btn-outline-primary">Remove ban</button>
                </div>
            </div>
        </div>
        %>
    </div>
</main>
<%- include('partials/footer') %>